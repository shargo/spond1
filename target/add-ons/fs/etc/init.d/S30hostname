#!/bin/sh
#
# Handle SPI.
#

export PATH=$PATH:/usr/local/bin:/bin
case "$1" in
start)
	logger "S30"
	sync
	echo "Setting hostname..."
	/bin/hostname `eeprom-read-hostname.sh`
	logger "S30 done"
	sync
	;;
stop)
	;;
restart|reload)
	"$0" stop
	"$0" start
	;;
*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?



