#!/bin/sh
#
# Hotplug
#

. /etc/common-defs

start_hotplug()
{
	echo "${HOTPLUG}" > /proc/sys/kernel/hotplug
}


case "$1" in
start)
	echo 5 > /tmp/blink_led
	logger "S20 start"
	sync
	start_hotplug
	logger "S20 done"
	sync
	;;
stop)
	;;
restart|reload)
	"$0" stop
	"$0" start
	;;
*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

