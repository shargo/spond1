#!/bin/sh
#
# netplug
#
# Written by Vladik Goytin.

netplug_start()
{
	/sbin/netplugd -c /etc/netplug/netplugd.conf
}


netplug_stop()
{
	pkill netplugd
}

case "$1" in
start)
	logger "S41"
	echo 7 > /tmp/blink_led
	sync
	netplug_start
	logger "S41 done"
	sync
	;;
stop)
	netplug_stop
	;;
restart|reload)
	"$0" stop
	"$0" start
	;;
*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

